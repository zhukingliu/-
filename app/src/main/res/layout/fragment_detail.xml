<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_light"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blue_light"
            android:text="记账本"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/header_margin"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
       <LinearLayout
           android:layout_alignParentLeft="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginLeft="20dp"
           android:padding="10dp">

           <TextView
               android:id="@+id/detail_year"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <TextView
               android:id="@+id/detail_date_month"
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:layout_marginLeft="10dp"
               android:textSize="20dp"
               android:textStyle="bold"/>
       </LinearLayout>
       <LinearLayout
           android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
           >
        <TextView
            android:id="@+id/detail_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收入（元）"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/detail_income_money"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="100"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>
       <LinearLayout
           android:layout_alignParentRight="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/detail_expend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支出（元）"
            android:gravity="center"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/detail_expand_money"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="50"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    </RelativeLayout>
    <View style="@style/bg_line"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>