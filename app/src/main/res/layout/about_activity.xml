<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/gray">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/text_about"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo_circle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/text_about"
            android:padding="10dp"
            android:text="所乐 SuoLe 1.0.0"/>
    </RelativeLayout>

    <LinearLayout style="@style/mid_layout"
                  android:id="@+id/team_introduce">
        <TextView style="@style/usertext"
                  android:text="团队介绍" />
        <ImageView style="@style/img_arrow"/>
    </LinearLayout>
    <View style="@style/bg_line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:paddingBottom="10dp"
        android:text="所乐团队 版权所有"
        android:gravity="center_horizontal|bottom"
        android:id="@+id/textView2"/>
</LinearLayout>